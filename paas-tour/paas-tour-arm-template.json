{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SQL Server Prefix": {
      "type": "string"
    },
    "Cosmos DB Account Prefix": {
      "type": "string"
    }
  },
  "variables": {
    "SQL Server Name": "[concat(parameters('SQL Server Prefix'), '-sql-server')]",
    "SQL Password": "RC_8$zEAVYh&yKXR%KYBj4xnjX^yn=",
    "Cosmos Account Name": "[concat(parameters('Cosmos DB Account Prefix'), '-cosmos-db')]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2015-05-01-preview",
      "name": "[variables('SQL Server Name')]",
      "location": "[resourceGroup().location]",
      "tags": {},
      "properties": {
        "administratorLogin": "ludwig",
        "administratorLoginPassword": "[variables('SQL Password')]",
        "version": "12.0"
      },
      "resources": [
        {
          "type": "databases",
          "apiVersion": "2014-04-01",
          "name": "sql-db",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('SQL Server Name'))]"
          ],
          "tags": {},
          "properties": {
            "createMode": "default",
            "edition": "Standard",
            "requestedServiceObjectiveName": "S0",
            "sampleName": "AdventureWorksLT"
          },
          "resources": []
        }
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2015-04-08",
      "name": "[variables('Cosmos Account Name')]",
      "location": "[resourceGroup().location]",
      "tags": {},
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "capabilities": []
      }
    }
  ]
}